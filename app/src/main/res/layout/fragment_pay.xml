<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.LoginView.Pay.Pay">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button8"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginTop="220dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:freezesText="false"
                android:paddingLeft="52dp"
                android:paddingTop="60dp"
                android:paddingRight="54dp"
                android:text="1 год 10000 р"
                android:textColor="#000000"
                android:textSize="16sp"
                app:cornerRadius="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.886"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewPager2_pay"
                app:strokeColor="#DBDBDB"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginTop="19dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:freezesText="false"
                android:paddingLeft="40dp"
                android:paddingTop="60dp"
                android:paddingRight="40dp"
                android:text="6 месяцев 2000 р"
                android:textColor="#000000"
                android:textSize="16sp"
                app:cornerRadius="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button4"
                app:strokeColor="#DBDBDB"
                app:strokeWidth="1dp" />

            <ImageView
                android:id="@+id/imageView36"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="44dp"
                android:src="@drawable/dol_10000"
                app:layout_constraintEnd_toEndOf="@+id/button8"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toStartOf="@+id/button8"
                app:layout_constraintTop_toTopOf="@+id/button8" />

            <Button
                android:id="@+id/button4"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#8AFDFBF9"
                android:fontFamily="sans-serif-light"
                android:freezesText="false"
                android:paddingLeft="50dp"
                android:paddingTop="60dp"
                android:paddingRight="50dp"
                android:text="1 месяц 800 р"
                android:textColor="#000000"
                android:textSize="16sp"
                app:cornerRadius="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewPager2_pay"
                app:strokeColor="#DBDBDB"
                app:strokeWidth="1dp" />

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="44dp"
                android:src="@drawable/dol_800"
                app:layout_constraintEnd_toEndOf="@+id/button4"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="@+id/button4"
                app:layout_constraintTop_toTopOf="@+id/button4" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager2_pay"
                android:layout_width="408dp"
                android:layout_height="154dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button2"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:freezesText="false"
                android:paddingLeft="50dp"
                android:paddingTop="60dp"
                android:paddingRight="50dp"
                android:text="3 месяц 1600 р"
                android:textColor="#000000"
                android:textSize="16sp"
                app:cornerRadius="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.882"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewPager2_pay"
                app:strokeColor="#DBDBDB"
                app:strokeWidth="1dp" />

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="44dp"
                android:src="@drawable/dol_1600"
                app:layout_constraintEnd_toEndOf="@+id/button2"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@+id/button2"
                app:layout_constraintTop_toTopOf="@+id/button2" />

            <ImageView
                android:id="@+id/imageView37"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="44dp"
                android:src="@drawable/dol_2000"
                app:layout_constraintEnd_toEndOf="@+id/button9"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="@+id/button9"
                app:layout_constraintTop_toTopOf="@+id/button9" />

            <Button
                android:id="@+id/take_but5"
                android:layout_width="267dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                android:backgroundTint="#41B22F"
                android:fontFamily="sans-serif-light"
                android:text="Продолжить"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button9"
                app:layout_constraintVertical_bias="0.44" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>